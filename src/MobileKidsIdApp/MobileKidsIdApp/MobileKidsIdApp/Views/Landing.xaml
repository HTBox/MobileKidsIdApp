<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.Landing"
             Title="Kids Id Kit">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
		    	<RowDefinition Height="*" />
		    	<RowDefinition Height="*" />
		  	</Grid.RowDefinitions>
		  	<Grid.ColumnDefinitions>
		    	<ColumnDefinition Width="*" />
		    	<ColumnDefinition Width="*" />
		  	</Grid.ColumnDefinitions>
		  	<Button Text="Content" Command="{Binding DisplayContentMenuCommand}" Style="{StaticResource GridButton}" Grid.Row="0" Grid.Column="1" />
		  	<Button Text="My kids" Command="{Binding ChildProfileListCommand}" Style="{StaticResource GridButton}" Grid.Row="0" Grid.Column="0" />
		  	<Button Text="Options" Command="{Binding OptionsCommand}" Style="{StaticResource GridButton}" Grid.Row="1" Grid.Column="0" />
		  	<Button Text="Logout" Command="{Binding LogoutCommand}" Style="{StaticResource GridButton}" Grid.Row="1" Grid.Column="1" />
		</Grid>
	</ContentPage.Content>
</ContentPage>