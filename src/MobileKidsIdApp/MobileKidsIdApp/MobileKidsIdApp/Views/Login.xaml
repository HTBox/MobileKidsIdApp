<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.Login"
             Title="Login">
    <StackLayout>
        <Label Text="Login" FontSize="40" BackgroundColor="Silver"/>
        <Button Text="Facebook" Command="{Binding FacebookLoginCommand}"/>
        <Button Text="Microsoft" Command="{Binding MicrosoftLoginCommand}"/>
        <Button Text="Google" Command="{Binding GoogleLoginCommand}"/>
        <Button Text="Test login" Command="{Binding TestLoginCommand}" IsVisible="{Binding Testing}"/>
    </StackLayout>
</ContentPage>