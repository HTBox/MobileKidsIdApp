<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.Login"
             Title="Missing Kids Minnesota">
    <StackLayout>
		<Label Text="Login" Style="{StaticResource HeaderLabel}" />
        <Button Text="Facebook" Command="{Binding FacebookLoginCommand}" Style="{StaticResource LoginButton}" />
        <Button Text="Microsoft" Command="{Binding MicrosoftLoginCommand}" Style="{StaticResource LoginButton}" />
        <Button Text="Google" Command="{Binding GoogleLoginCommand}" Style="{StaticResource LoginButton}" />
        <Button Text="Test login" Command="{Binding TestLoginCommand}" IsVisible="{Binding Testing}" Style="{StaticResource LoginButton}" />
    </StackLayout>
</ContentPage>