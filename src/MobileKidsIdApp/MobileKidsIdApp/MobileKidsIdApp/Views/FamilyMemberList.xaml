<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.FamilyMemberList" 
             xmlns:controls="clr-namespace:MobileKidsIdApp.Controls;assembly=MobileKidsIdApp"
             xmlns:models="clr-namespace:MobileKidsIdApp.Models;assembly=MobileKidsIdApp.Models"
             Title="Family">
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Add" Command="{Binding NewItemCommand}"/>
  </ContentPage.ToolbarItems>
  <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <controls:RepeaterView x:TypeArguments="models:Person" x:Name="Repeater" Spacing="10" Orientation="Vertical" ItemsSource="{Binding Model}"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
      <controls:RepeaterView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Style="{StaticResource RepeaterItem}">
              <Label Text="Relation"/>
              <Entry Text="{Binding Relation}"/>
              <Label Text="{Binding ContactId}"/>
              <Button Text="Change" Command="{Binding ChangeContactCommand}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </controls:RepeaterView.ItemTemplate>
    </controls:RepeaterView>
  </ScrollView>
</ContentPage>