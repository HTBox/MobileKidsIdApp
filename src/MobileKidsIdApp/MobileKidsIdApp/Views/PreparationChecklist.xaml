<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.PreparationChecklist"
             Title="Preparedness checklist">
  <TableView Intent="Form">
    <TableRoot>
      <TableSection>
        <SwitchCell Text="Child Photo" On="{Binding Model.ChildPhoto}" />
        <SwitchCell Text="Birth Certificate" On="{Binding Model.BirthCertificate}" />
        <SwitchCell Text="Social Security Card" On="{Binding Model.SocialSecurityCard}" />
        <SwitchCell Text="Physical Details" On="{Binding Model.PhysicalDetails}" />
        <SwitchCell Text="Distinguishing Features" On="{Binding Model.DistinguishingFeatures}" />
        <SwitchCell Text="Friends" On="{Binding Model.Friends}" />
        <SwitchCell Text="DNA" On="{Binding Model.DNA}" />
        <SwitchCell Text="Mementos" On="{Binding Model.Mementos}" />
        <SwitchCell Text="Divorce Custody Papers" On="{Binding Model.DivorceCustodyPapers}" />
        <SwitchCell Text="Other Parents and Family" On="{Binding Model.OtherParentsAndFamily}" />
      </TableSection>
    </TableRoot>
  </TableView>
  </ContentPage>